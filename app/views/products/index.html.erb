<h1>Products</h1>
<table class="table table-striped">
  <thead>
  <tr>
    <th><%= "Name" %></th>
    <th><%= "Lowest price" %></th>
    <th><%= "Highest price" %></th>
    <th><%= "Current price" %></th>
    <th>Delete</th>
  </tr>
  </thead>
  <tbody>
<% @products.each do |product| %>
  <tr id="product_<%= product.id %>">
    <td>
      <%= link_to product.name, product_path(product) %>
    </td>
    <td>
      <%= product.lowest_price.value %>
    </td>
    <td>
      <%= product.highest_price.value %>
    </td>
    <td>
      <%= product.current_price.value %>
    </td>
    <td>
      <%= link_to "x", product_path(product), method: :delete, confirm: "Are you sure?", remote: true %>
    </td>
  </tr>
<% end %>
</table>