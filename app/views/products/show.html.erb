<h2>Product page</h2>
<h3>Product information</h3>
<div class="row">
  <div class="span1">
    <span class="label">Name</span>
  </div>
  <div class="span4">
    <a href="http://www.amazon.com/dp/<%= @product.ASIN %>"><%= @product.name %></a>
  </div>
</div>

<% unless @product.prices.blank? %>
<div class="row">
  <div class="span1">
    <span class="label">Current price</span>
  </div>
  <div class="span4">
    <%= @product.current_price.value %>
  </div>
</div>

<div class="row">
  <div class="span1">
    <span class="label label-success">Lowest price</span>
  </div>
  <div class="span4">
    <%= @product.lowest_price.value %>
  </div>
</div>

<div class="row">
  <div class="span1">
    <span class="label label-important">Highest price</span>
  </div>
  <div class="span4">
    <%= @product.highest_price.value %>
  </div>
</div>

    <h3>Historical data</h3>
    <table class="table table-striped">
      <thead>
      <tr>
        <th><%= "Price" %></th>
        <th><%= "Date" %></th>
      </tr>
      </thead>
      <tbody>
    <% @product.prices.each do |price| %>
      <tr>
        <td>
          <%= price.value %>
        </td>
        <td>
          <%= price.created_at %>
        </td>
      </tr>
    <% end %>
<% else %>
  <div class="row">
    <div class="span4 alert">
      No pricing information.
    </div>
  </div>
<% end %>